<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity3">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#4E1010"
        tools:context=".MainActivity2"
        tools:layout_editor_absoluteX="-51dp"
        tools:layout_editor_absoluteY="16dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="411dp"
            android:layout_height="82dp"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="113dp"
            android:layout_height="51dp"
            android:text="Menu"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/toolbar2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/toolbar2"
            app:layout_constraintTop_toTopOf="@+id/toolbar2" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="160dp"
                    android:layout_height="206dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="80dp"
                    app:srcCompat="@drawable/carlsburg" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="164dp"
                    android:layout_height="36dp"
                    android:layout_marginBottom="4dp"
                    android:text="Carlsberg"
                    android:textColor="#E4CCCC"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="140dp"
                    android:layout_height="42dp"
                    android:layout_marginTop="4dp"
                    android:text="Order" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="166dp"
                    android:layout_height="164dp"
                    app:srcCompat="@drawable/heineken" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="153dp"
                    android:layout_height="34dp"
                    android:layout_marginBottom="4dp"
                    android:text="Heineken"
                    android:textColor="#DCCBCB"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="140dp"
                    android:layout_height="42dp"
                    android:text="Order" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="143dp"
                    android:layout_height="136dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="4dp"
                    app:srcCompat="@drawable/guni" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="154dp"
                    android:layout_height="35dp"
                    android:text="Guinness"
                    android:textColor="#D3C1C1"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="140dp"
                    android:layout_height="42dp"
                    android:text="Order" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>